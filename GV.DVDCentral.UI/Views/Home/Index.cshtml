@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <h1 class="display-3">Welcome to My Movie Site</h1>
            <p class="lead">Discover the latest movies, reviews, and more!</p>
            <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Movie" asp-action="Index" role="button">Explore Movies</a>
        </div>
    </div>
    <div class="container py-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card feature-card text-center">
                    <div class="card-body">
                        <div class="feature-icon mb-2"><i class="fas fa-film"></i></div>
                        <h4 class="card-title">Latest Releases</h4>
                        <p class="card-text">Stay up to date with the newest movies added to our collection.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card text-center">
                    <div class="card-body">
                        <div class="feature-icon mb-2"><i class="fas fa-star"></i></div>
                        <h4 class="card-title">Top Rated</h4>
                        <p class="card-text">Browse the highest-rated movies as voted by our community.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card text-center">
                    <div class="card-body">
                        <div class="feature-icon mb-2"><i class="fas fa-calendar-plus"></i></div>
                        <h4 class="card-title">Coming Soon</h4>
                        <p class="card-text">Check out upcoming releases and get excited for what's next!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer text-center">
        <p>&copy; 2024 Gerald Vallejos</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
